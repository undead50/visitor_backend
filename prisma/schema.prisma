generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Department {
  id              Int       @id @default(autoincrement())
  name            String    @db.VarChar(50)
  updated_at      DateTime?
  deleted_at      DateTime?
  created_by      String?
  created_at      DateTime  @default(now())
  @@map("tbl_department")
}

model Employee {
  id              Int       @id @default(autoincrement())
  branch          String
  created_at      DateTime  @default(now())
  CreatedBy       String?
  departmentName String    @db.VarChar(50)
  cbsUsername    String?
  domainName     String    @db.VarChar(50)
  email           String    @db.VarChar(50)
  name            String    @db.VarChar(50)
  role            String?    @db.VarChar(50)
  updated_at      DateTime?
  employeeDesignation String?    @db.VarChar(50)
  systemRole      String?    @db.VarChar(50)
  isActive       String?    @db.VarChar(5)
  @@map("tbl_employee")
}

model Visitor {
  id              Int       @id @default(autoincrement())
  name            String    @db.VarChar(50)
  purpose_of_visit         String    @db.VarChar(50)
  department      String    @db.VarChar(50)
  check_in_time   DateTime?
  check_out_time   DateTime?
  status          String    @db.VarChar(10)
  address         String
  updated_at      DateTime?
  photo           String?
  files           String?
  id_card_no      String
  deleted_at      DateTime?
  created_by      String?
  created_at      DateTime  @default(now())
  uploaded_files  Json
  mobile_no       String?    @db.VarChar(50)
  host_contact_person String @db.VarChar(50)
  @@map("tbl_visitor")
}
